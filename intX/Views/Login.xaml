<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" Title="Login" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="intX.Views.Login">
    <ContentPage.Content>
        <ScrollView BackgroundColor="Silver">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="1.25*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                    <Entry Grid.Row="1" x:Name="pass" Grid.Column="1" IsPassword="true" Placeholder="Password" HeightRequest="40"/>
                <Label Text="" x:Name="err" TextColor="Red" FontSize="Large" FontAttributes="Bold" Grid.Row="2" Grid.Column="1" HorizontalOptions="Center" />
                <Button Grid.Row="3" Clicked="Handle_Clicked" Grid.Column="1" BackgroundColor="Black" Text="Enter" TextColor="White" FontSize="Large" Margin="0,20,0,0"/>
            </Grid>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
